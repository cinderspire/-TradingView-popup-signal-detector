# AutomatedTradeBot Frontend - Environment Configuration
# Copy this file to .env.local and update with your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (required)
# Development: http://localhost:6864
# Production: https://api.automatedtradebot.com
NEXT_PUBLIC_API_URL=http://localhost:6864

# WebSocket URL (required)
# Development: ws://localhost:6864
# Production: wss://api.automatedtradebot.com
NEXT_PUBLIC_WS_URL=ws://localhost:6864

# =============================================================================
# Environment
# =============================================================================

# Application environment (development, staging, production)
NEXT_PUBLIC_ENV=development

# =============================================================================
# Payment Integration (Stripe)
# =============================================================================

# Stripe Publishable Key (required for payments)
# Get your key from: https://dashboard.stripe.com/apikeys
# Test mode: pk_test_...
# Live mode: pk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================

# Google Analytics Measurement ID
# Format: G-XXXXXXXXXX
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
# Get from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Enable beta features
NEXT_PUBLIC_BETA_FEATURES=false

# =============================================================================
# Development Settings (Optional)
# =============================================================================

# Enable debug mode (shows additional logs)
NEXT_PUBLIC_DEBUG=false

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Notes
# =============================================================================
# - Never commit .env.local to version control
# - NEXT_PUBLIC_* variables are exposed to the browser
# - Keep sensitive keys (API secrets, private keys) on backend only
# - Restart dev server after changing environment variables
